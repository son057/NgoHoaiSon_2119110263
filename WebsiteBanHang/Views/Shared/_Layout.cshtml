                            <a class="nav-link" href="@Url.Action("Brand", "Brand")">Tất cả thương hiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AllProduct","Product")">Tất cả sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Page","Content")">Tin Tức</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Content","Content")">Chính sách bán hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact","Home")">Liên Hệ</a>
