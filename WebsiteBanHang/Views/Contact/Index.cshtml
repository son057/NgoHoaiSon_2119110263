


@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">

    @*<h2>Liên hệ</h2>*@
    <div class="col-md-12">
        <div class="col-md-12">
            <h2>Thông tin liên hệ</h2>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="">Họ và tên</label>
                    <input type="name" name="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" name="email" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Tiêu đề</label>
                    <input type="text" name="title" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Nội dung liên hệ</label>
                    <textarea name="content" rows="3" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" name="LIENHE" class="btn btn-success">LIÊN HỆ</button>
                </div>
            </form>
        </div>

        <div class="col-md-12">
            <h2>Bản đồ</h2>
            <div class="map" id="mapCanvas">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15552.116873916537!2d109.3426422!3d12.96998215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x316fe58f12559bc5%3A0x97b09bef642f2071!2sS%C6%A1n%20Sport%20Store!5e0!3m2!1sen!2s!4v1637824449951!5m2!1sen!2s" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>


