@model IEnumerable<WebsiteBanHang.Context.C2119110263_Page>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex">
                        <h3 class="card-title flex-fill">Quản lý bài viết</h3>
                        @Html.ActionLink("Thêm bài viết", "Create")
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Avatar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShortDes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Deleted)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShowOnHomePage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DisplayOrder)
                                    </th>


                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var slg = item.Slug;
                                    var url_details = "/dashboard/chi-tiet-tin-tuc/" + slg + "-" + item.Id;
                                    var url_edits = "/dashboard/sua-tin-tuc/" + slg + "-" + item.Id;
                                    var url_deletes = "/dashboard/xoa-tin-tuc/" + slg + "-" + item.Id;
                                    <tr>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <img style="width:8em" src="~/Content/images/avatars/@item.Avatar" alt="Alternate Text" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShortDes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Deleted)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShowOnHomePage)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                                        </td>

                                        <td>
                                            <div class="d-flex">
                                                <a class="btn btn-danger mx-1" href=@url_edits> <i class="fas fa-edit"></i></a>
                                                <a class="btn btn-danger mx-1" href=@url_details> <i class="fa fa-info"></i></a>
                                                <a class="btn btn-danger mx-1" href=@url_deletes><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>