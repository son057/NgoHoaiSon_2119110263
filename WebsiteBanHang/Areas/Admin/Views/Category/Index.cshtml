@model IEnumerable<WebsiteBanHang.Context.C2119110263_Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- /.card-header -->
<div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Avartar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowOnHomePage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deleted)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>




            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img style="width:8em" src="~/Content/images/category/@item.Avartar" alt="Alternate Text" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowOnHomePage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deleted)
                    </td>

                    <td>
                        <a class="btn btn-danger mx-1" href=@Url.Action("Edit", "Category", new { id = item.Id })> <i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger mx-1" href=@Url.Action("Details", "Category", new { id = item.Id })> <i class="fas fa-info"></i></a>
                        <a class="btn btn-danger mx-1" href=@Url.Action("Delete", "Category", new { id = item.Id })><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.card-body -->